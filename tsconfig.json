{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "alwaysStrict":true,
    "exactOptionalPropertyTypes":true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noStrictGenericChecks": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
    }
  },
  "include": ["./src/**/*"]
}
